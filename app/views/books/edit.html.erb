<h1>Editing Book</h1>

<div class= "error-box">
<% if @book.errors.any? %>
  <div class= "er-title"><%= @book.errors.count %>error prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%=f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

<% end %>